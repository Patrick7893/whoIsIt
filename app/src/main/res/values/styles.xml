<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Dialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="AppTheme.IncomingCall" parent="AppTheme">
        <item name="android:theme">@android:style/Theme.Translucent.NoTitleBar.Fullscreen</item>
        <item name="android:itemBackground">@android:color/transparent</item>
    </style>

    <style name="numPadButtonStyle" parent="AppTheme">
        <item name="android:textColor">@color/numbersCollor</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">11sp</item>

    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/country_spinner_bg</item>
    </style>

    <style name="shadow_text">
            <item name="android:paddingLeft">4px</item>
            <item name="android:paddingBottom">4px</item>
            <item name="android:textColor">#ffffffff</item>
            <item name="android:shadowColor">#000000</item>
            <item name="android:shadowDx">2</item>
            <item name="android:shadowDy">2</item>
            <item name="android:shadowRadius">2</item>
    </style>

</resources>
