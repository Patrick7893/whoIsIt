<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/categoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:text="P"
        android:textColor="@color/numbersCollor"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:tag="@string/roboroRegular"
        android:layout_marginBottom="5dp"
        android:visibility="visible" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white">

            <RelativeLayout
                android:id="@+id/nameContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_toLeftOf="@+id/informationImageView">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/photoImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/user_avatar"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/nameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ашот Ованесян"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:textColor="@color/numbersCollor"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        android:tag="@string/roboroRegular"
                        android:layout_marginTop="5dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/photoImageView" />

                </RelativeLayout>



                <ImageView
                    android:id="@+id/informationImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/information"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="15dp"/>

            </RelativeLayout>



        </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/background"
        android:layout_toRightOf="@+id/avatarImageView"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp" />


</LinearLayout>